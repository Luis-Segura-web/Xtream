<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme optimizado -->
    <style name="Theme.Xtream" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue_dark</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_dark</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/accent_blue</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_primary_light</item>
    </style>

    <!-- Splash theme optimizado -->
    <style name="Theme.Xtream.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue_dark</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_dark</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        
        <item name="colorSurface">@color/splash_background</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <item name="android:colorBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- Login theme optimizado -->
    <style name="Theme.Xtream.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue_dark</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_dark</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/accent_blue</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_primary_light</item>
    </style>

    <!-- Loading theme optimizado -->
    <style name="Theme.Xtream.Loading" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue_dark</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_dark</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <item name="android:colorBackground">@color/background_light_secondary</item>
        <item name="android:statusBarColor">@color/accent_blue</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>
    
    <!-- Tema para modo nocturno -->
    <style name="Theme.Xtream.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_blue_light</item>
        <item name="colorPrimaryVariant">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        
        <item name="colorSecondary">@color/accent_orange_light</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/text_primary_dark</item>
        
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <item name="colorError">@color/error_red_light</item>
        <item name="colorOnError">@color/text_primary_dark</item>
    </style>
</resources>